#!/bin/bash

set -e

BUILD_DIR=$1
CACHE_DIR=$2

indent() {
  sed -u 's/^/       /'
}

echo "-----> Configure /app directories & Symlink /app to web root"

chmod -R 0777 /app/cache
chmod -R 0777 /app/log
chmod -R 0777 /app/web/uploads
mkdir -p $BUILD_DIR/var/www
ln -sf /app $BUILD_DIR/var/www/app.amjcampbell.com
ln -sf /app $BUILD_DIR/var/www/amj
